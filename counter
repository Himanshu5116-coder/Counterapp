import React, { useState } from 'react';

// Main App component
export default function App() {
  // State to hold the counter value, initialized to 0
  const [count, setCount] = useState(0);

  // Function to handle incrementing the count
  const increment = () => {
    setCount(prevCount => prevCount + 1);
  };

  // Function to handle decrementing the count
  const decrement = () => {
    setCount(prevCount => prevCount - 1);
  };

  return (
    <div className="bg-gray-100 min-h-screen flex items-center justify-center font-sans">
      <div className="bg-white rounded-lg shadow-lg p-8 max-w-sm w-full text-center">
        <h1 className="text-2xl font-bold text-gray-800 mb-4">Counter App</h1>
        
        {/* Display the current count */}
        <p className="text-6xl font-bold text-indigo-600 mb-6">{count}</p>
        
        {/* Buttons for incrementing and decrementing */}
        <div className="flex justify-center space-x-4">
          <button
            onClick={decrement}
            className="px-6 py-2 bg-red-500 text-white font-semibold rounded-lg shadow-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-400 focus:ring-opacity-75 transition duration-200"
          >
            Decrement
          </button>
          <button
            onClick={increment}
            className="px-6 py-2 bg-green-500 text-white font-semibold rounded-lg shadow-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-opacity-75 transition duration-200"
          >
            Increment
          </button>
        </div>

        {/* Conditional rendering for the warning message */}
        {count < 0 && (
          <p className="text-red-500 font-semibold mt-6 bg-red-100 p-3 rounded-lg">
            Counter cannot be negative!
          </p>
        )}
      </div>
    </div>
  );
}
